@model Mvckarolnew.Models.ViewIssue

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Issue</legend>

        @Html.HiddenFor(model => model.IdV)

        <div class="editor-field">
            @Html.Label("Typ")
            @Html.DropDownList("IdTypeV", Model.TypeV.Name)
            @Html.ValidationMessageFor(model => model.IdTypeV)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NameV, "Nazwa")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NameV)
            @Html.ValidationMessageFor(model => model.NameV)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TextV, "Text")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TextV)
            @Html.ValidationMessageFor(model => model.TextV)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
