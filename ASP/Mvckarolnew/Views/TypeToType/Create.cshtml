@model Mvckarolnew.Models.ViewTypeToType

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>TypeToType</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdParentV, "Typ główny")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdParentV", String.Empty)
            @Html.ValidationMessageFor(model => model.IdParentV)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdSubV, "Podtyp")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IdSubV", String.Empty)
            @Html.ValidationMessageFor(model => model.IdSubV)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>

            @if (TempData["validation"] != null)
            {
                <script language='javascript' type='text/javascript'>alert('Taki typ, posiada już taki podtyp.');</script>
            }
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
